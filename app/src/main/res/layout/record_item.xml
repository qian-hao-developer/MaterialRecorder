<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            app:cardCornerRadius="@dimen/record_item_card_view_card_corner_radius"
            app:cardElevation="@dimen/record_item_card_view_card_elevation"
            android:layout_margin="@dimen/record_item_card_view_layout_margin"
            android:foreground="?android:attr/selectableItemBackground"
            android:transitionName="open_media_player"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/record_item_card_view_layout_height">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/logo"
                    android:src="@drawable/ic_fileviewer"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/record_item_card_view_content_logo_margin_vertical"
                    android:layout_marginRight="@dimen/record_item_card_view_content_logo_margin_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/file_name"
                        android:textSize="@dimen/record_item_card_view_content_name_text_size"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/file_length"
                        android:textSize="@dimen/record_item_card_view_content_length_text_size"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginTop="@dimen/record_item_card_view_content_length_margin_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/file_added_date"
                        android:textSize="@dimen/record_item_card_view_content_date_text_size"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>